 
 <link rel="stylesheet" href="/css/dashboard.css"/>  


{{#if loggedIn}}
<script src="/javascript/logout.js"></script>
{{/if}}


    <section id='dash-favs'>
      {{#if user}}
      <h4>{{user}}'s Favorites</h4>
      {{/if}}      
          <div class="row container movrow">
                 {{#each posts}}
    <img src='https://image.tmdb.org/t/p/w500{{poster_path}}' class ="movies" id="{{id}}">
      {{/each}}
            </div>
     
    </section>


    <section id="dash-reviews">
      {{#if user}}
      <h4>{{user}}'s Reviews</h4>
      {{/if}} 
      <div class="row">
        {{#each reviews}}
        <div class="card col-md-3" style="width: 18rem;" name="{{user_id}}">
          <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text" id="post-text">{{post_content}}</p>
          </div>
        <button class="button btn" id="edit">edit review for {{movie_title}}</button>
        </div>
        {{/each}}
      </div>
    </section>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
 <script src="/javascript/dashboard.js"></script>

